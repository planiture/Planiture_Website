@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<div class="body">

    <br />
    <br />
    <br />
    <div id="success">
        <p>
            <span>User Email has been successfully verified!</span>
            <br />
            <br />
            Please Login to continue the application Process...
            <br />
            <br />
            <center><a asp-area="Identity" asp-page="/Account/Login">(Login)</a></center>
        </p>
    </div>
</div>

<style>
    .body {
        position: relative;
        width: 100%;
        min-height: 100vh;
        background-size: cover;
        display: flex; /*changed from inline*/
        justify-content: center;
        align-items: center;
    }
    #success {
        background-color: white;
        border: 1px solid black;
        padding: 60px;
    }
    #success span{
        padding: 20px;
      background-color: #4CAF50;
      color: white;
      opacity: 1;
      transition: opacity 0.6s;
      margin-bottom: 15px;
    }
</style>