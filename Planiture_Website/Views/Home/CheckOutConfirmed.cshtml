
@{
    ViewData["Title"] = "CheckOutConfirmed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="checkout-background">
    <!--added image-->
    <div class="checkout-menu" id="checkout">
        <div class="container">
            <br />
            <h1>Check Out</h1>
            <br />
            <br />
            <div class="row">
                <div class="col-sm-6 col-md-6">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3 style="text-align:center;">PLANITURE<br />DAILY SIGNALS<br />SUBSCRIPTION</h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-md-6 form-background">
                    <p>
                        <span id="success">Your payment was confirmed!</span>
                        <br />
                        <br />
                        Your Signal ID No. was emailed to you.
                        <br />
                        <br />
                        (Download our Signal App from the <a href="">(AppStore</a> or <a href="">PlayStore)</a>)
                    </p>
                </div>
            </div>
        </div>
