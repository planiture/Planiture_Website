
@{
    ViewData["Title"] = "IM_Academy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<asp:Content id="BodyContent" ContentPlaceHolderID="Main Content" runat="server">
    <section id="traders-background">
        <!--added image-->
        <div class="traders-menu" id="traders">
            <div class="container">
                <h1>IM_Academy Earn & Learn</h1>
                <br />
                <br />
                <div class="row">
                    <div class="col-sm-3 col-md-3"></div>
                    <div class="col-sm-6 col-md-6">
                        <div class="thumbnail">
                            <img src="~/css/binaryaccount.jpg" alt="Binary_account" width="300" height="250">
                            <br />
                            <br />
                            <div class="caption">
                                <p>
                                    <a asp-controller="Home" asp-action="IM_AcademyEarnLearn">'EARN & LEARN'</a> - Join our <br />
                                    learning platform with <br /> mentorship and 
                                    signal sessions <br /> to earn as you learn ForEx.
                                    <br />
                                    (Join Team Planiture)
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3 col-md-3"></div>
                </div>
            </div>
        </div>

    </section>
</asp:Content>

<style>
    .traders-background {
        position: relative;
        width: 100%;
        min-height: 100vh;
        background-size: cover;
        display: flex; /*changed from inline*/
        justify-content: center;
        align-items: center;
    }

    .traders-menu {
        position: relative;
        padding: 100px;
        min-height: 100vh;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .traders-menu h1 {
        font-size: 40px;
        font-weight: 200;
        margin-bottom: 10px;
        color: darkgoldenrod;
        text-transform: uppercase;
        text-align: right;
    }

    .traders-menu p {
        position: relative;
        font-size: 18px;
        font-weight: 300;
        margin-bottom: 20px;
        letter-spacing: 1px;
    }

    .row .col-md-6 .thumbnail {
        border-radius: 4px;
        padding: 1px;
    }
</style>