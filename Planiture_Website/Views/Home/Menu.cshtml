                    <div class="text">
                        <h5>CAREER</h5>
                    </div>
                </div>
                <div class="menu-item">
                    <a asp-area="" asp-controller="Home" asp-action="Policy"><img src="~/css/security.jpg" width="250" height="250" alt="POLICY"/><br /></a>
                    <div class="text">
                        <h5>POLICY</h5>
