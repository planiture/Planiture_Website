                    <a asp-area="" asp-controller="Home" asp-action="Subscriptions"><img src="~/css/subscriptions.jpg" width="250" height="250" alt="SUBSCRIPTIONS"/></a>
                    <div class="text">
                        <h5>SUBSCRIPTIONS</h5>
                    </div>
                </div>
                <div class="menu-item">
                    <a asp-area="" asp-controller="Home" asp-action="UploadApprovedDocument"><img src="~/css/upload.jpg" width="250" height="250" alt="UPLOAD/APPROVED DOCUMENTS" /><br /></a>
                    <div class="text">
                        <h5>UPLOAD/APPROVED<br />DOCUMENTS</h5>
                    </div>
                </div>
                <div class="menu-item">
                    <a asp-area="" asp-controller="Home" asp-action="InformationCenter"><img src="~/css/information.jpg" width="250" height="250" alt="INFORMATION CENTER"/><br /></a>
                    <div class="text">
