               <div class="menu-item">
                    <a asp-area="" asp-controller="Home" asp-action="Investments"><img src="~/css/investments.jpg" width="250" height="250" alt="INVESTMENTS" /><br /></a>
                    <div class="text">
                        <h5>INVESTMENTS</h5>
                    </div>
                </div>
