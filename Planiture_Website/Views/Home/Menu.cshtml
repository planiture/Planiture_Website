
@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<asp:Content id="BodyContent" ContentPlaceHolderID="Main Content" runat="server">
    <section class="menu-background"></section><!--added image-->

