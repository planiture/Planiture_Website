
@{
    ViewData["Title"] = "Investments";
}


<asp:Content id="BodyContent" ContentPlaceHolderID="MainContent" runat="server">
    <section class="invest-background">
        <!--added image-->
        <div class="invest-menu" id="invest">
            <h1>@ViewData["Title"]</h1>
            <p>
                PLANITURE currently offers clients the opportunity to invest their money and have it earn for them.
            </p>
            <br />
            <br />
            <br />
            <div class="row">
                <div class="col-sm-4 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>CASHFLIP</h3>
                            <div class="row">

                            </div>
                            <p>
                                Open an Investment Account with a minimum of $100.00. Whenever a client opens
                                <br />an Investment Account, a Profits Account is assigned to client for profit holds.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>PRIVATE INVESTORS</h3>
                            <p>
                                Open an Investment Account with a minimum of $100.00. Whenever a client opens an
                                <br />Investment Account, a Profits Account is assigned to client for profit holds.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 col-md-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3>STOCK PORTFOLIO</h3>
                            <p>
                                Open an Investment Account with a minimum of $100.00. Whenever a client opens an
                                <br />Investment Account, a Profits Account is assigned to client for profit holds.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</asp:Content>

<style>
    .invest-background {
        position: relative;
        width: 100%;
        min-height: 100vh;
        background-size: cover;
        display: flex; /*changed from inline*/
        justify-content: center;
        align-items: center;
    }

    .invest-menu {
        position: relative;
        text-align: center;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .invest-menu h1 {
        font-size: 40px;
        font-weight: 200;
        margin-bottom: 10px;
        color: darkgoldenrod;
        text-transform: uppercase;
        text-align: center;
    }

    .invest-menu h5 {
        text-align: center;
    }

    .invest-menu p {
        position: relative;
        font-size: 18px;
        font-weight: 300;
        margin-bottom: 20px;
        letter-spacing: 1px;
    }

    .invest-menu .row .col-sm-4 .thumbnail{
        border: 5px solid;
        border-radius: 4px;
        padding: 5px;
        border-color: darkgoldenrod;
    }
</style>