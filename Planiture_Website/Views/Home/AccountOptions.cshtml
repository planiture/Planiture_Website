<div class="apply-menu" id="apply">
    <h1>@ViewData["Title"]</h1>

    <br />
    <div class="row">
        <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>BASIC ACCOUNT</h3>
                    <br />
                    <p>
                        Deposit cash to your account for signal plans to have your funds traded in
                        the currency & commodity market
                        <br />
                        <br />
                        <a asp-controller="Home" asp-action="BasicAccount">(CONTINUE)</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>
                        STOCK PORTFOLIO
                    </h3>
                    <br />
                    <p>
                        Deposit cash to your account and have your funds invested into the stock market
                        <br />
                        <br />
                        <br />
                        <br />
                        <a asp-controller="Home" asp-action="StocksAccount">(CONTINUE)</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>ADVANCE ACCOUNT</h3>
                    <br />
                    <p>
                        Deposit cash to your account and have your funds traded in signal plans and invested
                        into stocks
                        <br />
                        <br />
                        <br />
                        <a asp-controller="Home" asp-action="AdvancedAccount">(CONTINUE)</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <br />
