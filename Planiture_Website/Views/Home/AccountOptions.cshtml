<style>
    .apply-background {
        position: relative;
        width: 100%;
        min-height: 100vh;
        background-size: cover;
        display: flex; /*changed from inline*/
        justify-content: center;
        align-items: center;
    }

    .apply-menu {
        position: relative;
        text-align: center;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .apply-menu h1 {
        font-size: 40px;
        font-weight: 200;
        margin-bottom: 10px;
        color: darkgoldenrod;
        text-transform: uppercase;
        text-align: right;
    }

    .apply-menu h5 {
        text-align: center;
    }

    .apply-menu p {
        position: relative;
        font-size: 18px;
        font-weight: 300;
        margin-bottom: 20px;
        letter-spacing: 1px;
    }

     .apply-menu .row .col-sm-4 .thumbnail {
        border: 5px solid;
        border-radius: 4px;
        padding: 35px;
        width: 100%;
        border-color: darkgoldenrod;
     }   
     .apply-menu .row .col-sm-6 .thumbnail {
        border: 5px solid;
        border-radius: 4px;
        padding: 35px;
        width: 100%;
        border-color: darkgoldenrod;
     }  
        
</style>