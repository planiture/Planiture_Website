
@{
    ViewData["Title"] = "IM_AcademyEarnLearn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<asp:Content id="BodyContent" ContentPlaceHolderID="Main Content" runat="server">
    <section id="traders-background">
        <!--added image-->
        <div class="traders-menu" id="traders">
            <div class="container">
                <h1>IM_Academy Earn & Learn</h1>
                <br />
                <br />
                <p>
                    Join our learning platform with trading sessions to earn as you learn.
                    <br />
                    <br />
                    Mentorship options available.
                </p>
                <br />
                <center>
                    <img src="~/css/IMAcademy.png" alt="IM_Academy_Earn_&_Learn" width="170" height="150" />
                    <br />
                    <br />
                    <div class="thumbnail">
                        <p>(IM ACADEMY URL LINK)</p>
                    </div>

                </center>
                <br />
                <br />
                <br />
                <div class="form-group" align="center">
                    <button id="cancelBtn" type="reset" class="btn btn-primary">CANCEL</button>
                </div>
            </div>
        </div>

    </section>
</asp:Content>

<style>
    .traders-background {
        position: relative;
        width: 100%;
        min-height: 100vh;
        background-size: cover;
        display: flex; /*changed from inline*/
        justify-content: center;
        align-items: center;
    }

    .traders-menu {
        position: relative;
        padding: 100px;
        min-height: 100vh;
        background-size: cover;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .traders-menu h1 {
        font-size: 40px;
        font-weight: 200;
        margin-bottom: 10px;
        color: darkgoldenrod;
        text-transform: uppercase;
        text-align: right;
    }

    .traders-menu p {
        position: relative;
        font-size: 18px;
        font-weight: 400;
        margin-bottom: 20px;
        letter-spacing: 1px;
    }

    .thumbnail {
        border-radius: 4px;
        padding: 1px;
        border: 1px solid black;
        background-color: white;
    }
    .thumbnail p{
        font-weight: 500;
    }
    #cancelBtn {
        -webkit-appearance: none;
        border: 1px solid #E89E63;
        border-radius: 4px;
        outline: none;
        padding: 0.5em 0.8em;
        margin-right: 15px;
        color: black;
        font-size: 1em;
        font-family: sans-serif;
        font-weight: bold;
        cursor: pointer;
        align-content: center;
        background-color: #ffe8d7;
        width: 20%;
    }

    #cancelBtn:hover {
        background: gold;
    }

    #cancelBtn:active {
        background: goldenrod;
        color: black;
    }
</style>